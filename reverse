class Solution {

    /**
     * @param Integer $x
     * @return Integer
     */
    function reverse($x) {
        $pow = pow(2, 31);       
        $numn = (int)strrev(abs($x));
        $numn=$x < 0 ?-$numn : $numn; 
        if ($numn < -$pow || $numn > $pow) {
            $numn = 0;
        }
        return $numn ?? 0;
    }
}
